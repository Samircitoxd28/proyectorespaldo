@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .calendar {
            background: #2C2F48;
            color: white;
            padding: 15px;
            border-radius: 10px;
            text-align: center;
        }

        .task {
            background: #f8f9fa;
            padding: 10px;
            border-radius: 5px;
            margin: 5px 0;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .btn-group button {
            margin: 5px;
        }
    </style>
</head>
<body>

    <div class="container text-center mt-4">
        <!-- Calendario -->
        <div class="calendar p-3">
            <h2>📅 June 2022</h2>
            <div class="row">
                <div class="col">S</div>
                <div class="col">M</div>
                <div class="col">T</div>
                <div class="col">W</div>
                <div class="col">T</div>
                <div class="col">F</div>
                <div class="col">S</div>
            </div>
            <div class="row">
                <div class="col">1</div>
                <div class="col">2</div>
                <div class="col">3</div>
                <div class="col">4</div>
                <div class="col">5</div>
                <div class="col">6</div>
                <div class="col bg-warning text-dark rounded">7</div>
            </div>
        </div>

        <!-- Días consecutivos -->
        <div class="mt-3">
            <h3>🔥 ¡365! DÍAS</h3>
            <div class="btn-group">
                <button class="btn btn-secondary">L</button>
                <button class="btn btn-secondary">M</button>
                <button class="btn btn-secondary">X</button>
                <button class="btn btn-secondary">J</button>
                <button class="btn btn-secondary">V</button>
                <button class="btn btn-secondary">S</button>
                <button class="btn btn-secondary">D</button>
            </div>
        </div>

        <!-- Botones de filtros -->
        <div class="mt-3">
            <button class="btn btn-warning">TODOS</button>
            <button class="btn btn-dark">🌞 MAÑANA</button>
            <button class="btn btn-dark">🌆 TARDE</button>
            <button class="btn btn-dark">🌙 NOCHE</button>
        </div>

        <!-- Lista de tareas -->
        <div class="mt-3">
            <div class="task">
                <input type="checkbox" checked>
                <span>💤 Duerme más de 8 h</span> ✔ Listo
            </div>
            <div class="task">
                <input type="checkbox">
                <span>💤 Duerme más de 8 h</span> ✔ Listo
            </div>
        </div>
    </div>

</body>
</html>


